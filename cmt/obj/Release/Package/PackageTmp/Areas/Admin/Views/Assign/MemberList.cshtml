@model List<cmt.ViewModels.UserLoginVM>
@{
    ViewBag.Title = "Manager";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="header">
    <div class="backoverlay">
        <div class="bread">
            <span class="blinditem whiteColor"><a href="#" accesskey="R" title="右方內容區塊">:::</a></span>
            <span>派工人員管理</span>
        </div>
        <div class="title">
            <span class="blinditem whiteColor font04"><a href="#" accesskey="C" title="中央內容區塊">:::</a></span>
            <span class="font00 font-bold">派工管理</span>
        </div>
    </div>
</section>


<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="twocolblock">
                    
                </div>
                <table width="100%" border="0" class="table-container table-colored MT10">
                    <thead>
                        <tr>
                            <th>帳號</th>
                            <th>使用者名稱</th>
                            <th>Email</th>
                            <th>身份</th>
                            <th>代理人</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var m in Model)
                            {
                                
                                <tr>
                                    <td align="center">@m.UserAccount</td>
                                    <td align="center">@m.UserNickname</td>
                                    <td align="center">@m.UserEmail</td>
                                    <td align="center">@m.RoleName</td>
                                    <td align="center">@m.AgentName</td>
                                    <td align="center">
                                        @using (Html.BeginForm())
                                        {
                                            <button type="button" class="btn01" onclick="location.href='@Url.Action("Role", "Assign", new { Guid = m.UserGuid })'">設定身份</button>

                                            <button type="button" class="btn01" onclick="location.href='@Url.Action("Agent", "Assign", new { Guid = m.UserGuid })'">設定代理人</button>

                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>