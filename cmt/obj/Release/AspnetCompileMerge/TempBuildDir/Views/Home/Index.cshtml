<section id="index-section-02">
    <div class="container">
        <div class="text-center MB30" id="c">
            <span class="blinditem greyColor font04"><a href="#" accesskey="C" title="中央內容區塊">:::</a></span>
            <h2>
                <div class="circle bggrey">最</div>
                新消息
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 MB10">
                <div class="card-normal match">
                    @foreach (var item in Model.Events)
                    {
                        <div class="vertical-align twocolblock">
                            <div class="left MR10">
                                <img src="@Url.Action("GetNewsPicture", "Home", new { id = item.Id, fileName = item.Picture })" title="@item.Title" alt="@item.Title" class="img-radius img-responsive MB10" />
                            </div>
                            <div class="left">
                                <div class="greenColor font04 font-bold MB5">活動紀實</div>
                                <div class="greyColor font02 font-bold"><a href='@Url.Action("EventDetail", "News", new { id = item.Id}, Request.Url.Scheme)'>@item.Title</a></div>
                            </div>
                        </div>
                        <p class="lineheight01 greyColor font03">@item.Brief</p>
                    }
                    <div class="alignRight">
                        <button type="button" class="btn01" onclick="window.location='@Url.Action("Event", "News")'">更多</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="match">
                    @foreach (var item in Model.Industrys)
                    {
                        <div class="newslist MB10">
                            <a href='@item.Url'>
                                <div class="card-photobg">
                                    <div class="whiteColor font04 font-bold MB5">產業新聞</div>
                                    <div class="whiteColor font02 font-bold">@item.Title</div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

