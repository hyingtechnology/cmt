                        <button type="submit" name="sa" class="btn01">搜尋</button>
                    }

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("網站導覽", "Sitemap", "Home")</li>
                            <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                            <li>@Html.ActionLink("核心理念", "PageIdea", "Home")</li>
                            @{

                                List<cmt.DTOs.NewsDTO> newsDTOs = (List<cmt.DTOs.NewsDTO>)ViewBag.menuModel;
                                var menu1 = newsDTOs.Where(x => x.parent_type == "01");
                                var menu2 = newsDTOs.Where(x => x.parent_type == "02");
                                var menu3 = newsDTOs.Where(x => x.parent_type == "03");
                                var menu4 = newsDTOs.Where(x => x.parent_type == "04");
                                var menu5 = newsDTOs.Where(x => x.parent_type == "05");
                                var menu6 = newsDTOs.Where(x => x.parent_type == "06");

                                List<cmt.DTOs.NewsDTO> newsDTOs3 = (List<cmt.DTOs.NewsDTO>)ViewBag.menuModel3;
                                List<cmt.DTOs.NewsDTO> newsDTOs4 = (List<cmt.DTOs.NewsDTO>)ViewBag.menuModel4;
                                List<cmt.DTOs.NewsDTO> newsDTOs5 = (List<cmt.DTOs.NewsDTO>)ViewBag.menuModel5;
                                List<cmt.DTOs.NewsDTO> newsDTOs6 = (List<cmt.DTOs.NewsDTO>)ViewBag.menuModel6;

                            }
