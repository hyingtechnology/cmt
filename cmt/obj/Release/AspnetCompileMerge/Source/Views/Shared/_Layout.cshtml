                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        @Html.ActionLink("循環材料智慧科技", "IntelliTech", "Exhibition")
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("IOT 技術", "PageExhibitionNormal03", "Exhibition")</li>
                                            <li>@Html.ActionLink("AI 視覺辨識", "PageExhibitionNormal04", "Exhibition")</li>

                                            <li>@Html.ActionLink("區塊鏈", "PageExhibitionNormal01", "Exhibition")</li>
                                            @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu1)
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        @Html.ActionLink("化學品交易", "ChemicalTrading", "Exhibition")
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("化學品交易", "PageExhibitionNormal06", "Exhibition")</li>
                                            @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu2)
                                        </ul>
                                    </li>
                                    @{
                                        if (menu3.Count() > 0 || newsDTOs3.Count() > 0)
                                        {
                                            <li class="dropdown-submenu">




                                                @{
                                                    if (newsDTOs3.Count() == 0)
                                                    {
                                                        <a href="javaScript:void(0)">循環材料驗證與媒合平台</a>
                                                    }
                                                    else
                                                    {
                                                        @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", newsDTOs3)
                                                    }
                                                }


                                                <ul class="dropdown-menu">

                                                    @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu3)
                                                </ul>
                                            </li>
                                        }
                                    }
                                    @{
                                        if (menu4.Count() > 0 || newsDTOs4.Count() > 0)
                                        {
                                            <li class="dropdown-submenu">
                                                @{
                                                    if (newsDTOs4.Count() == 0)
                                                    {
                                                        <a href="javaScript:void(0)">食品加工業生質料源再利用</a>
                                                    }
                                                    else
                                                    {
                                                        @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", newsDTOs4)
                                                    }
                                                }

                                                <ul class="dropdown-menu">

                                                    @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu4)
                                                </ul>
                                            </li>
                                        }
                                    }

                                    @{
                                        if (menu5.Count() > 0 || newsDTOs5.Count() > 0)
                                        {
                                            <li class="dropdown-submenu">
                                                @{
                                                    if (newsDTOs5.Count() == 0)
                                                    {
                                                        <a href="javaScript:void(0)">AI影像辨識技術</a>
                                                    }
                                                    else
                                                    {
                                                        @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", newsDTOs5)
                                                    }
                                                }

                                                <ul class="dropdown-menu">

                                                    @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu5)
                                                </ul>
                                            </li>
                                        }
                                    }

                                    @{
                                        if (menu6.Count() > 0 || newsDTOs6.Count() > 0)
                                        {
                                            <li class="dropdown-submenu">
                                                @{
                                                    if (newsDTOs6.Count() == 0)
                                                    {
                                                        <a href="javaScript:void(0)">台灣創新博覽會</a>
                                                    }
                                                    else
                                                    {
                                                        @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", newsDTOs6)
                                                    }
                                                }

                                                <ul class="dropdown-menu">

                                                    @Html.Partial("~/Views/Shared/_ViewMenuItem.cshtml", menu6)
                                                </ul>
                                            </li>
                                        }
                                    }
                                </ul>
