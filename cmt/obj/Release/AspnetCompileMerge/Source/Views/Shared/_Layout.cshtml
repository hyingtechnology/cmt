                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">最新消息 <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @*<li>@Html.ActionLink("展覽公告", "Exhibition", "News")</li>*@
                                    <li>@Html.ActionLink("產業新聞", "Industry", "News")</li>
                                    @*<li>@Html.ActionLink("新知上架", "Knowledge", "News")</li>*@
                                    <li>@Html.ActionLink("活動紀實", "Event", "News")</li>
                                </ul>
                            </li>
                            <li>
                                @{
                                    if (!ViewBag.isLogin)
                                    {

                                        @Html.ActionLink("登入", "ManagerCenter", "News", new { Area = "Admin" }, new { })
                                    }
                                    else
                                    {
                                        <div style="padding-top:15px;padding-bottom:15px;"><span userName="true" class="ML10 MR10">@ViewBag.NickName</span><span style="display:inline-block;  margin-right:5px;">您好</span><a logOut="true" href="@Url.Content("~/Home/SingOut")">登出</a></div>
                                    }
                                }
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
